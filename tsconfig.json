{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "exclude": [
       "node_modules",
       "bower_components",
       "lib/libFileToExclude.d.ts"
     ],
     "scripts": {
        "postbuild": "echo after building"
    },
    "buildOnSave": true
}